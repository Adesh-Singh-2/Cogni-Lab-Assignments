#Q1 a
a = np.array([0,1,2,3,4])
b = a+2
print(b)
#b
c = a*3
print(c)
#c
d=a/2
print(d)

#Q2 a
arr=np.array([1,2,3,6,4,5])
e= np.flip(arr)
print(e)
#Q2.b
x=np.array([1,2,3,4,5,1,2,1,1,1,1])
y=np.array([1,1,1,2,3,4,2,4,3,3,3])
print(np.bincount(x))
print(np.bincount(y))
print("MAX COUNT")
print(np.bincount(x).argmax())
print(np.bincount(y).argmax())

